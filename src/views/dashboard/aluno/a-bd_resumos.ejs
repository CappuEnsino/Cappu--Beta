<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bd-telas.css">
    <link rel="stylesheet" href="/css/header2.css">
    <title>Meus Resumos</title>
</head>
<body>
    <header>
        <a href="/aluno/a-minharotina"><img src="/images/voltar.svg" alt=""></a>
        <p>MÉTODOS DE ESTUDO</p>
        <div>
          <p><%= user.name %></p>
          <button class="user-icon" id="userIcon" aria-label="Abrir menu do usuário">
              <img  src="/images/perfil.svg" alt="imagem do perfil">
              <div class="user-config" id="userConfig">
                  <ul>
                      <li><a href="/aluno/a-perfil">MENU</a></li>
                      <li><a href="/aluno/a-config">CONFIGURAÇÕES</a></li>
                      <li><a href="/auth/logout">SAIR</a></li>
                  </ul>
              </div>
          </button>
      </div>
      </header>
      <main>
        <section class="caixa">
            <h1>MEUS RESUMOS</h1>
            <section class="quadrado2">
                <section class="caixa-cinza">
                    <input type="text" class="search-box" placeholder="Buscar resumos...">
                </section>
                <table class="gerenciamento">
                    <thead>
                        <tr>
                            <th>TÍTULO</th>
                            <th>CATEGORIA</th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead> 
                    <tbody>
                      <% resumos.forEach(resumo => { %>
                        <tr>
                          <td><%= resumo.titulo %></td>
                          <td><%= resumo.categoria %></td>
                          <td><a href="/aluno/resumo/view/<%= resumo.id %>"><img src="/images/find_in_page.svg" alt="Visualizar"></a></td>
                          <td>
                            <a href="/aluno/resumo/edit/<%= resumo.id %>"><img src="/images/border color.svg" alt="Editar"></a>
                          </td>
                          <td>
                            <form action="/aluno/resumo/delete/<%= resumo.id %>" method="POST" style="display:inline">
                              <button type="submit"><img src="/images/delete.svg" alt="Lixeira"></button>
                            </form>
                          </td>
                        </tr>
                      <% }) %>
                    </tbody>
                </table>
            </section>
        </section>
      </main>
      <script src="/js/icon-menu.js"></script>
</body>
</html>