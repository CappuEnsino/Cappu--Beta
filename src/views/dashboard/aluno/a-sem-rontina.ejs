            <button id="open" onclick="mostrarSections()" style="display: none;">Mudar Plano</button>

            <section class="line" id="secao1"></section>
            
            <section class="brown-box" id="secao2">
                <img src="close.svg" alt="close-button" id="close" onclick="esconderSections()" onmouseover="inverterCor()" onmouseout="resetarCor()">
                <section class="cont">
                    <section id="pt-1">
                        <h2>LIBERE COM O PLANO PREMIUM!</h2>
                    </section>
                    <section id="pt-2">
                        <img src="block.svg" alt="block" id="block">
                        <button id="atualizar-plano" href="#">
                            <span>Atualizar</span>
                            <span>Plano</span>
                        </button>
                    </section>
                </section>
            </section>
        </section>
    </main>
    <!-- não tem footer -->
    <script>
        function inverterCor() {
            document.getElementById("close").classList.add("invert");
            document.getElementById("close").src = "close-inv.svg";
        }

        function resetarCor() {
            document.getElementById("close").classList.remove("invert");
            document.getElementById("close").src = "close.svg";
        }
        
        function esconderSections() {
            document.getElementById("secao1").style.display = "none";
            document.getElementById("secao2").style.display = "none";
            document.getElementById("close").style.display = "none";
            document.getElementById("open").style.display = "inline-block";

            document.getElementById("conteudo").classList.add("modo-retraido");
        }

        function mostrarSections() {
            document.getElementById("secao1").style.display = "block";
            document.getElementById("secao2").style.display = "block";
            document.getElementById("close").style.display = "inline-block";
            document.getElementById("open").style.display = "none";

            document.getElementById("conteudo").classList.remove("modo-retraido");
        }
    </script>
</body>
</html>