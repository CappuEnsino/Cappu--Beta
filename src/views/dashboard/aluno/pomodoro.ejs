<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="pomodoro.css">
    <title>Pomodoro</title>
</head>
<body>
    <header>
        
    </header>
    <main>
        <h1 id="title">Pomodoro</h1>
        <section class="conteúdo">
            <section class="pt-1">
                <section class="opc">
                    <label for="ciclos">Quantidadade de ciclos</label>
                    <select id="ciclos" name="ciclos">
                        <option value="0">0</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                </section>
                <section class="opc">
                    <label for="tempo-foco">Tempo do Foco</label>
                    <select id="tempo-foco" name="tempo-foco">
                        <option value="25">25 minutos</option>
                        <option value="30">30 minutos</option>
                        <option value="35">35 minutos</option>
                        <option value="40">40 minutos</option>
                        <option value="45">45 minutos</option>
                    </select>
                </section>
                <section class="opc">
                    <label for="tempo-descanso">Tempo de Descanso</label>
                    <select id="tempo-descanso" name="tempo-descanso">
                        <option value="5">5 minutos</option>
                        <option value="10">10 minutos</option>
                        <option value="15">15 minutos</option>
                        <option value="20">20 minutos</option>
                        <option value="25">25 minutos</option>
                    </select>
                </section> 
                <button id="iniciar" class="toggle">iniciar</button>              
            </section>

            <section class="pt-2">
                <h1>Visualização</h1>
                <section class="visu" id="visu">
                    <section id="bloco"></section>
                </section>
            </section>

            <section id="janela-flutuante">
                <section id="cronometro">00:00</section>
            </section>
        </section>
    </main>

    <script src="pomodoro.js"></script>
</body>
</html>